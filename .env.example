# Environment
ENVIRONMENT=development # production/development/staging

# API Configuration
API_URL=http://localhost:8080
BASE_URL=http://localhost:19006
COOKIE_SECRET=your-cookie-secret-here-min-32-chars
JWT_SECRET=your-jwt-secret-here-must-be-at-least-32-characters-long
ENCRYPTION_KEY=

# OAuth Callback URLs
AUTHZ_SUCCESS_URL=http://localhost:19006/playlist
AUTHZ_ERROR_URL=http://localhost:19006

# React Native Configuration (optional)
NATIVE_API_URL=http://192.168.0.16:8080
NATIVE_BASE_URL=http://192.168.0.16:8082
AUTHZ_SUCCESS_URL_NATIVE=exp://192.168.0.16:8082/--/auth
AUTHZ_ERROR_URL_NATIVE=exp://192.168.0.16:8082/--/auth

# Spotify OAuth Configuration
# Get these from: https://developer.spotify.com/dashboard
SPOTIFY_ID=<YOUR-SPOTIFY-CLIENT-ID>
SPOTIFY_SECRET=<YOUR-SPOTIFY-CLIENT-SECRET>
SPOTIFY_REDIRECT_URI=http://localhost:8080/callback
SPOTIFY_REDIRECT_URI_NATIVE=http://192.168.0.16:8080/callback/native

# YouTube Music OAuth Configuration
# Get these from: https://console.cloud.google.com/
YTMUSIC_CLIENT_ID=<YOUR-GOOGLE-CLIENT-ID>.apps.googleusercontent.com
YTMUSIC_CLIENT_SECRET=<YOUR-GOOGLE-CLIENT-SECRET>
YTMUSIC_REDIRECT_URI=http://localhost:8080/ytmusic/auth/callback

# SoundCloud OAuth Configuration
# Get these from: https://soundcloud.com/you/apps
SOUNDCLOUD_CLIENT_ID=<YOUR-SOUNDCLOUD-CLIENT-ID>
SOUNDCLOUD_CLIENT_SECRET=<YOUR-SOUNDCLOUD-CLIENT-SECRET>
SOUNDCLOUD_REDIRECT_URI=http://localhost:8080/soundcloud/auth/callback

# Database Configuration (CockroachDB)
DB_USER=root
DB_PASSWORD=
DB_HOST=cockroachdb
DB_PORT=26257
DB_NAME=defaultdb
DB_SSLMODE=disable
